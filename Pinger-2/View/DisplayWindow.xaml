<Window x:Class="Pinger_2.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinger_2"
        xmlns:UserControls="clr-namespace:Pinger_2.UserControls"
        mc:Ignorable="d" Topmost="True"
        Height="450" Width="300" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Rectangle Name="DragField" Width="Auto" Fill="#FF2D2E37" 
                       MouseLeftButtonDown="DragField_MouseLeftButtonDown"/>
            <Button Content="-" Padding="-3" Style="{StaticResource PrimaryButtonStyle}"
                    Name="MinimizeFormButton" Grid.Column="1"
                    Click="MinimizeFormButton_Click"/>
            <Button Content="X" Name="CloseFormButton" Padding="-2"
                    Grid.Column="2" Style="{StaticResource PrimaryButtonStyle}"
                    Click="CloseFormButton_Click"/>
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding PingViewModels}"
                  d:ItemsSource="{d:SampleData ItemCount=3}"
                  Background="{StaticResource BackgroundBrush}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <UserControls:PingDisplay AddressName="{Binding Name}"
                                              DomainOrIP="{Binding DomainOrAddress}"
                                              Ping="{Binding Ping}"
                                              TimeSinceLastRequest="{Binding TimeSinceLastRequest}"
                                              TimeToRed="0:0:0.1"
                                              
                        />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
