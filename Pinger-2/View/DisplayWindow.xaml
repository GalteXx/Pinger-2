<Window x:Class="Pinger_2.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinger_2"
        mc:Ignorable="d"
        Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Rectangle Name="DragField" Width="Auto" Fill="#FF2D2E37" />
            <Button Content="-" 
                    Name="MinimizeFormButton" Grid.Column="1" 
                    Background="#201F24" Foreground="White" BorderBrush="#201F24"/>
            <Button Content="X" Name="CloseFormButton" 
                    Grid.Column="2" Background="#201F24" Foreground="White" BorderBrush="#201F24"/>
        </Grid>

        <ListView Grid.Row="1">
            
        </ListView>

    </Grid>
</Window>
